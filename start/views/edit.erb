<p>Update your order form:</p>

<form method="POST" action="/pizza-orders/<%= @order.id %>">
  <label for="first-name">First Name:</label>
  <input type="text" id="first-name" name="first_name" value="<%= @order.first_name%>">
  <label for="last-name">Last Name:</label>
  <input type="text" id="last-name" name="last_name" value="<%= @order.last_name%>">
  <label for="topping">Topping:</label>
  <select name="topping" id="topping" value="<%= @order.topping%>">
    <option style="diplay:none">-</option>
    <option value="pepperoni">pepperoni</option>
    <option value="hawaian">hawaian</option>
    <option value="veggie">veggie</option>
  </select>
  <label for="quantity">Quantity:</label>
  <input type="number" id="quantity" name="quantity" value="<%= @order.quantity%>">
  <input type="submit" value="Update Order!">
</form>

<% @lists.each() do |list| %>
     <option value="<%= list.id()%>"> <%= list.name() %> </option>
   <% end %>
